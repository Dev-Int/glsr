<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Administration\Domain\FamilyLog\Model\FamilyLog"
            table="family_log"
            repository-class="Administration\Infrastructure\Finders\DoctrineOrm\DoctrineFamilyLogFinder">
        <id name="uuid" column="uuid" type="guid">
            <generator strategy="NONE"/>
        </id>
        <field name="label" type="string" length="150" nullable="false"/>
        <many-to-one field="parent" target-entity="Administration\Domain\FamilyLog\Model\FamilyLog" inversed-by="children">
            <join-column referenced-column-name="uuid" on-delete="CASCADE"/>
        </many-to-one>
        <one-to-many field="children" target-entity="Administration\Domain\FamilyLog\Model\FamilyLog" mapped-by="parent"/>
        <field name="path" type="string" nullable="false"/>
        <field name="slug" type="string" nullable="false"/>
    </entity>
</doctrine-mapping>
