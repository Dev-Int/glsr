<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Administration\Domain\Settings\Model\Settings"
            table="settings"
            repository-class="Administration\Infrastructure\Persistence\DoctrineOrm\Repositories\DoctrineSettingsRepository">
        <id name="uuid" column="uuid" type="guid">
            <generator strategy="NONE"/>
        </id>
        <field name="currency" type="string" nullable="false"/>
        <field name="locale" type="string" nullable="false"/>
    </entity>
</doctrine-mapping>
