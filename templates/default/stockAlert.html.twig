{% if listArticles is not defined or listArticles is empty %}
    <h5 class="text-center">
        <small>
            {{ 'alerts.no_alerts'|trans({}, 'gs_articles') }}
        </small>
    </h5>
{% else %}
<h5 class="text-danger text-center">{{ 'alerts.stock_title'|trans({}, 'gs_articles') }}</h5>
<ul class="list-group">
    {% for article in listArticles %}
        <li class="list-group-item">
            <a class="left" href="{{ path('orders_new', {'supplier': article.supplier.id}) }}">
                <span class="col-md-2 pull-right text-center">
                    <i class="fa fa-eye" aria-hidden="true"></i>
                </span>
                <span class="col-md-10">{{ article.name }}</span>
                <div class="clearfix"></div>
            </a>
        </li>
    {% endfor %}
</ul>
{% endif %}
