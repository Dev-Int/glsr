{% if listInventory is empty %}
{% else %}
<h5 class="text-success text-center">{{ 'alerts.inventory_title'|trans({}, 'gs_articles') }}</h5>
<ul class="list-group">
    {% for inventory in listInventory %}
        <li class="list-group-item">
            <a href="{{ path('inventory_show', {'id': inventory.id}) }}">
                <span class="col-md-2 pull-right text-center">
                    <i class="fa fa-eye" aria-hidden="true"></i>
                </span>
                <span class="col-md-4">{{ "%06d"|format( inventory.id ) }} : </span>
                <span class="col-md-6">{{ inventory.date|date('d/m/Y') }}</span>
                <div class="clearfix"></div>
            </a>
        </li>
    {% endfor %}
</ul>
{% endif %}
