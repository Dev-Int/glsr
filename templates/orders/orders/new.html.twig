{% extends "base.html.twig" %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}
    {{ '%entity% creation'|trans({'%entity%': 'title'|trans({}, 'gs_orders')}, 'admin') }} - {{ parent() }}
{% endblock %}

{% block body_title %}
    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
    {{ '%entity% creation'|trans({'%entity%': 'title_short'|trans({}, 'gs_orders')}, 'admin') }}
{% endblock %}

{% block glstock_body %}

    {{ form_start(form, {action: path('orders_create')}) }}
        {{ form_widget(form) }}
        <p>
            <button class="btn btn-primary btn-create" type="submit">{{ 'Create'|trans({}, 'admin') }}</button>
        </p>
    {{ form_end(form) }}

        
        <div class="btn-group record_actions">
            {% include 'homeButton.html.twig' %}
            <a class="btn btn-info" href="{{ path('orders') }}">
                <i class="fa fa-list"></i> {{ 'Back to the list'|trans({}, 'admin') }}
            </a>

        </div>

{% endblock %}
