{% extends "base.html.twig" %}

{% block title %}
    {{ 'gestock.settings.diverse.unit'|trans }} - {{ parent() }}
{% endblock %}

{% block body_title %}
    <i class="fa fa-cubes"></i>
    {{ 'gestock.settings.diverse.unit'|trans }}
{% endblock %}

{% block glstock_body %}
    <table class="table table-hover table-bordered record_properties">
        <tbody>
            <tr>
                <th scope="row" class="col-md-4">{{ 'gestock.name'|trans }}</th>
                <td class="col-md-8">{{ unit.name }}</td>
            </tr>
            <tr>
                <th scope="row">{{ 'gestock.abbreviation'|trans }}</th>
                <td>{{ unit.abbr }}</td>
            </tr>
        </tbody>
    </table>

    {{ form_start(delete_form) }}
        {{ form_widget(delete_form) }}

        <div class="btn-group record_actions">
            {% include 'homeButton.html.twig' %}
            <a class="btn btn-info btn-list" href="{{ path('unit') }}">
                {{ 'gestock.return_list'|trans }}
            </a>

            <a class="btn btn-primary btn-edit" href="{{ path('unit_edit', {slug: unit.slug}) }}">
                {{ 'Edit'|trans({}, 'admin') }}
            </a>
            <button class="btn btn-danger btn-delete" type="submit">
                {{ 'Delete'|trans({}, 'admin') }}
            </button>

        </div>

        <input name="modal" type="hidden" value="0">
    {{ form_end(delete_form) }}

    {% include 'deleteForm.html.twig' %}
{% endblock %}
