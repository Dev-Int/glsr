{% extends "base.html.twig" %}

{% block title %}
    {{ 'gestock.settings.settings.title'|trans }} - {{ parent() }}
{% endblock %}

{% block body_title %}
    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    {{ 'gestock.settings.settings.title'|trans }}
{% endblock %}

{% block glstock_body %}
    <table class="table table-hover record_properties">
        <tbody>
            <tr>
                <th scope="row">{{ 'gestock.settings.settings.style_inventory'|trans }}</th>
                <td>{{ settings.inventoryStyle }}</td>
            </tr>
            <tr>
                <th scope="row">{{ 'gestock.settings.settings.calculation'|trans }}</th>
                <td>{{ settings.calculation }}</td>
            </tr>
                <th scope="row">{{ 'gestock.settings.settings.currency'|trans }}</th>
                <td>{{ settings.currency }}</td>
            </tr>
        </tbody>
    </table>

    {{ form_start(delete_form) }}
        {{ form_widget(delete_form) }}

        <div class="btn-group record_actions">
            {% include 'homeButton.html.twig' %}
            <a class="btn btn-info btn-list" href="{{ path('application') }}">
                {{ 'gestock.return_list'|trans }}
            </a>

            <a class="btn btn-primary btn-edit" href="{{ path('settings_edit', {id: settings.id}) }}">
                {{ 'Edit'|trans({}, 'admin') }}
            </a>
            <button class="btn btn-danger btn-delete" type="submit">
                {{ 'Delete'|trans({}, 'admin') }}
            </button>

        </div>

        <input name="modal" type="hidden" value="0">
    {{ form_end(delete_form) }}

    {% include 'deleteForm.html.twig' %}
{% endblock %}
