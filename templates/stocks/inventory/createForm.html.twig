{% form_theme create_form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

<div id="create_confirm" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modalLabel">
                    <i class="fa fa-tasks" aria-hidden="true"></i>
                    {{ '%entity% creation'|trans({'%entity%': 'title'|trans({}, 'gs_inventories')}, 'admin') }}
                </h4>
            </div>
            <div class="modal-body">
                {{ form_start(create_form) }}
                <div class="col-md-6">
                    {{ form_row(create_form.date) }}
                </div>
                <button class="col-md-offset-1 col-md-5 btn btn-print btn-primary" type="submit" onclick="closeReload();">
                    {{ 'prepare.title'|trans({}, 'gs_inventories') }}
                </button>
                {{ form_end(create_form) }}
                <span class="clearfix"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <i class="fa fa-times" aria-hidden="true"></i>
                    {{ 'gestock.cancel'|trans }}
                </button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function closeReload(){
        var form = $('#create_confirm');
        form.modal('hide');
    }
</script>
