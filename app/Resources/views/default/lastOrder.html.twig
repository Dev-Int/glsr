{% if listOrders is not defined or listOrders is empty %}
    <h5 class="text-center">
        <small>
            {{ 'alerts.no_orders'|trans({}, 'gs_orders') }}
        </small>
    </h5>
{% else %}
<h5 class="text-success text-center">{{ 'alerts.order_title'|trans({}, 'gs_orders') }}</h5>
<ul class="list-group">
    {% for order in listOrders %}
        <li class="list-group-item">
            <a href="{{ path('orders_show', {'id': order.id}) }}">
                <span class="col-md-2 pull-right text-center">
                    <i class="fa fa-eye" aria-hidden="true"></i>
                </span>
                <span class="col-md-4">{{ "%06d"|format( order.id ) }} : </span>
                <span class="col-md-6 text-right">{{ order.amount|localizedcurrency('EUR') }}</span>
                <div class="clearfix"></div>
            </a>
        </li>
    {% endfor %}
</ul>
{% endif %}
