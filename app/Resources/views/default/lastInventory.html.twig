<h4 class="text-danger">{{ 'alerts.sub_title2'|trans({}, 'gs_articles') }}</h4>
<ul class="list-group list-unstyled">
    {% for inventory in listInventory %}
        <li class="list-group-item">
            <a class="left" href="{{ path('inventory_show', {'id': inventory.id}) }}">
                <span class="col-md-2 pull-right text-center">
                    <i class="fa fa-eye" aria-hidden="true"></i>
                </span>
                <span class="col-md-3">{{ "%06d"|format( inventory.id ) }} : </span>
                <span class="col-md-7">{{ inventory.date|date('d/m/Y') }}</span>
                <div class="clearfix"></div>
            </a>
        </li>
    {% endfor %}
</ul>
