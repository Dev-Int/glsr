<h4 class="text-danger">{{ 'alerts.sub_title1'|trans({}, 'gs_articles') }}</h4>
<ul class="list-group">
    {% for article in listArticles %}
        <li class="list-group-item">
            <a class="left" href="{{ path('articles_show', {'slug': article.slug}) }}">
                <span class="col-md-2 pull-right text-center">
                    <i class="fa fa-eye" aria-hidden="true"></i>
                </span>
                <span class="col-md-10">{{ article.name }}</span>
                <div class="clearfix"></div>
            </a>
        </li>
    {% endfor %}
</ul>
