default:
  suites:
    default:
      contexts:
        - Behat\Tests\DemoContext
        - Behat\Tests\InventoryContext
        - Behat\Tests\AppContext

  extensions:
    FriendsOfBehat\SymfonyExtension:
      bootstrap: tests/bootstrap.php
      kernel:
        class: Core\Infrastructure\Kernel
        path: ~
        environment: ~
        debug: ~
