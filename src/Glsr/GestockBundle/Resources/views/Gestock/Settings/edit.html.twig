{# src\Glsr\GestockBundle\Resources\views\Gestock\Settings\edit.html.twig #}

{% extends "GlsrGestockBundle::layout.html.twig" %}

{% block title %}
    Settings - {{ parent() }}
{% endblock %}

{% block body_title %}
    <h2>
        <i class="glyphicon glyphicon-pencil"></i> 
        {{ 'glsr.gestock.settings.form.title'|trans }}
    </h2>
{% endblock %}

{% block glstock_body %}

    {% if company is defined %}
        {% include 'GlsrGestockBundle:Gestock/Settings:company-form.html.twig' %}
    {% elseif settings is defined %}
        {% include 'GlsrGestockBundle:Gestock/Settings:settings-form.html.twig' %}
    {% else %}
        {% include 'GlsrGestockBundle:Gestock/Settings:form.html.twig' %}
    {% endif %}

    <p class="alert alert-warning">{{ 'glsr.gestock.settings.form.caution'|trans }}</p>

    <p>
        <a href="#" onclick="window.history.back();return false;" class="btn btn-default" role="button">
            <i class="glyphicon glyphicon-chevron-left"></i>
            {{ 'glsr.gestock.settings.return'|trans }}
        </a>
    </p>
{% endblock %}
