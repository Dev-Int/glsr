{# src\Glsr\GestockBundle\Resources\views\Gestock\Settings\company-form.html.twig #}

{# Cette vue n'hérite de personne, elle sera inclue par d'autres vues qui, elles, hériteront sûrement du layout. #}
{# Je dis "sûrement" car, ici pour cette vue, on n'en sait rien et c'est une info qui ne nous concerne pas. #}

{% block body_title %}
    {{ 'glsr.gestock.settings.form.title'|trans }}
{% endblock %}
{{ form_start(form) }}
{#<form method="post" {{ form_enctype(form) }}>#}
    <fieldset class="well">
        {{ form_errors(form) }}
        <legend>{{ 'glsr.gestock.settings.form.info'|trans }}</legend>
        <div class="col-md-1">
            <span class="label label-default">
                {{ form_label(form.name, 'glsr.gestock.name'|trans) }}
            </span>
        </div>
        <div class="col-md-5">
            <span class="text-danger">{{ form_errors(form.name) }}</span>
            {{ form_widget(form.name) }}
        </div>
        <div class="col-md-1">
            <span class="label label-default">
                {{ form_label(form.status, 'glsr.gestock.settings.company.status'|trans) }}
            </span>
        </div>
        <div class="col-md-5">
            <span class="text-danger">{{ form_errors(form.status) }}</span>
            {{ form_widget(form.status) }}
        </div>
        <div class="col-md-1
             ">
            <span class="label label-default">
                {{ form_label(form.address, 'glsr.gestock.address'|trans) }}
            </span>
        </div>
        <div class="col-md-5">
            <span class="text-danger">{{ form_errors(form.address) }}</span>
            <span class="text-danger">{{ form_errors(form.zipcode) }}</span>
            <span class="text-danger">{{ form_errors(form.town) }}</span>
            {{ form_widget(form.address) }}<br />
            {{ form_widget(form.zipcode) }} {{ form_widget(form.town, { 'attr' : {
                'onBlur':'this.value=this.value.toUpperCase();',
                'onFocus':'this.value=this.value.toUpperCase();',
                'onKeyup':'this.value=this.value.toUpperCase();'
            } }) }}
        </div>
        <div class="col-md-1">
            <span class="label label-default">
                {{ 'glsr.gestock.supplier.settings.country'|trans }}
            </span>
        </div>
        <div class="col-md-5">
{#            <span class="text-danger">{{ form_errors(form.country) }}</span>
            {{ form_widget(form.country) }}#}
        </div>
        <legend>{{ 'glsr.gestock.settings.administratif'|trans }}</legend>
        <div class="col-md-1">
            <span class="label label-default">
                {{ 'glsr.gestock.contact'|trans }}
            </span>
        </div>
        <div class="col-md-11">
            <span class="text-danger">{{ form_errors(form.contact) }}</span>
            {{ form_widget(form.contact) }}
        </div>
        <div class="col-md-1">
            <span class="label label-default">
                {{ 'glsr.gestock.gsm'|trans }}
            </span>
        </div>
        <div class="col-md-5">
            <span class="text-danger">{{ form_errors(form.gsm) }}</span>
            {{ form_widget(form.gsm) }}
        </div>
        <div class="col-md-1">
            <span class="label label-default">
                {{ 'glsr.gestock.phone'|trans }}
            </span>
        </div>
        <div class="col-md-5">
            <span class="text-danger">{{ form_errors(form.phone) }}</span>
            {{ form_widget(form.phone) }}
        </div>
        <div class="col-md-1">
            <span class="label label-default">
                {{ 'glsr.gestock.fax'|trans }}
            </span>
        </div>
        <div class="col-md-5">
            <span class="text-danger">{{ form_errors(form.fax) }}</span>
            {{ form_widget(form.fax) }}
        </div>
        <div class="col-md-1">
            <span class="label label-default">
                {{ 'glsr.gestock.mail'|trans }}
            </span>
        </div>
        <div class="col-md-5">
            <span class="text-danger">{{ form_errors(form.mail) }}</span>
            {{ form_widget(form.mail) }}
        </div>
    </fieldset>

    {{ form_rest(form) }}
    <input type="submit" class="btn btn-default btn-primary" value="{{ 'glsr.gestock.validate'|trans }}" />
    <p>&nbsp;</p>
</form>
<script type="text/javascript">
function upperCase(){
    $("#glsr_gestockbundle_settings_town").val().toUpperCase();
}
</script>
