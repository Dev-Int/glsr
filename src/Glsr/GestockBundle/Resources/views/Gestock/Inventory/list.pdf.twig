<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Inventory - Gestock</title>
        {% block stylesheets %}
            {% stylesheets filter='cssrewrite, ?yui_css' 'css/bootstrap.css' %}
                <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            {% endstylesheets %}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <div class="col-lg-2">Gestock - <i class="glyphicon glyphicon-tasks"></i> Inventaire</div>
            <div class="col-lg-2 col-lg-offset-3"></div>
            <div class="col-lg-2 col-lg-offset-3">{{ 'now' | localizeddate('full', 'none') }}</div>
            <div class="clearfix"></div>

            <hr />
            <table class="table-bordered col-lg-12">
                <thead>
                    <tr>
                        <th class="col-lg-4">name</th>
                        <th class="col-lg-2">price</th>
                        <th class="col-lg-2">quantity</th>
                        <th class="col-lg-2">unitstorage</th>
                        <th class="col-lg-2">Inventaire</th>
                    </tr>
                </thead>
                {% for zstor in zonestorage %}
                    <tr>
                        <th class="col-lg-12" colspan="5">{{ zstor.name }} </th>
                    </tr>
                    {% for article in articles %}
                        {% for artzone in article.zonestorages %}
                            {% if artzone.name == zstor.name %}
                                <tr>
                                    <td class="col-lg-4">{{ article.name }}</td>
                                    <td class="col-lg-2">{{ article.price }} â‚¬</td>
                                    <td class="col-lg-2">{{ article.quantity }}</td>
                                    <td class="col-lg-2">{{ article.unitstorage }}</td>
                                    <td class="col-lg-2"> </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                {% endfor %}
            </table>
            <div class="clearfix"></div>

            <footer>
                <hr />
                <div class="col-lg-3">GLSR &copy 2014 and beyond.</div>
                <div class="col-lg-1 col-lg-offset-3"></div>
                <div class="col-lg-2 col-lg-offset-3">Page - </div>
                <p></p>
            </footer>
        </div>
    </body>
</html>
