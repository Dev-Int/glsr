{# src\Glsr\GestockBundle\Resources\views\Gestock\Article\reassign.html.twig #}

{% extends "GlsrGestockBundle::layout.html.twig" %}

{% block title %}
    {{ 'glsr.gestock.article.reassign.title'|trans }} - {{ parent() }}
{% endblock %}

{% block body_title %}
    <i class="glyphicon glyphicon-transfer"></i> {{ 'glsr.gestock.article.reassign.from'|trans({'%supname%': supname}) }}
{% endblock %}

{% block glstock_body %}
<div class="well">
    {{ form_start(form, { 'attr' : { 'class':'form-horizontal' } }) }}
        <table>
            <thead>
                <tr>
                    <th class="col-md-5">{{ 'glsr.gestock.article.title'|trans }}</th>
                    <th class="col-md-5">{{ 'glsr.gestock.supplier.title'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {{ form_errors(form) }}
                {% for art in articles %}
                <tr>
                    <td>
                        {{ art.name }}
                    </td>
                    <td>
                        {{ form_widget(form['supplier-' ~ art.id]) }}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <p>&nbsp;</p>
        <input type="submit" class="btn btn-default btn-primary" value="{{ 'glsr.gestock.article.reassign.submit_button'|trans }}" />
        <a href="{{ path('glstock_suppli_list') }}" class="btn btn-default" role="button">
            <i class="glyphicon glyphicon-chevron-left"></i>
            {{ 'glsr.gestock.return_list'|trans }}
        </a>
    {{ form_end(form) }}
</div>
{% endblock %}
