<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Administration\Domain\User\Model\User"
            table="user"
            repository-class="Administration\Infrastructure\Persistence\DoctrineOrm\Repositories\DoctrineUserRepository">
        <id name="uuid" column="uuid" type="guid">
            <generator strategy="NONE"/>
        </id>
        <field name="username" type="string" length="150" nullable="false"/>
        <field name="email" type="string" length="255" nullable="false"/>
        <field name="password" type="string" length="36" nullable="false"/>
        <field name="roles" type="array" nullable="false"/>
    </entity>
</doctrine-mapping>
