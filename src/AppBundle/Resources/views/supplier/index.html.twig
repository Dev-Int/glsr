{% extends "base.html.twig" %}

{% block title %}
    {{ '%entity% list'|trans({'%entity%': 'title'|trans({}, 'gs_suppliers')}, 'admin') }} - {{ parent() }}
{% endblock %}
{% macro thead(name, field, label) %}
    {% spaceless %}
        {% set sort = app.session.get('sort.' ~ name) %}
        {% if sort and sort.field == field %}
            {% if sort.type == 'DESC' %}
                <a href="{{ path('suppliers_sort', {field: field, type: 'ASC'}) }}">{{ label }} <i class="fa fa-sort-down"></i></a>
            {% elseif sort.type == 'ASC' %}
                <a href="{{ path('suppliers_sort', {field: field, type: 'DESC'}) }}">{{ label }} <i class="fa fa-sort-up"></i></a>
            {% endif %}
        {% else %}
            <a href="{{ path('suppliers_sort', {field: field, type: 'ASC'}) }}">{{ label }} <i class="fa fa-sort"></i></a>
        {% endif %}
    {% endspaceless %}
{% endmacro %}

{% from _self import thead %}

{% block body_title %}
    <i class="fa fa-barcode" aria-hidden="true"></i> 
    {{ '%entity% list'|trans({'%entity%': 'title'|trans({}, 'gs_suppliers')}, 'admin') }}
{% endblock %}

{% block glstock_body %}
    <table class="table table-striped table-hover table-bordered records_list">
        <thead>
            <tr>
                <th scope="col">{{ thead('supplier', 'id', 'gestock.id'|trans) }}</th>
                <th scope="col">{{ 'gestock.name'|trans }}</th>
                <th scope="col">{{ 'gestock.address'|trans }}</th>
                <th scope="col">{{ 'gestock.phone'|trans }}</th>
                <th scope="col" class="col-md-2 text-center">{{ 'Actions'|trans({}, 'admin') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for supplier in paginator %}
                <tr>
                    <td>{{ "%06d"|format(supplier.id) }}</td>
                    <td><a href="{{ path('suppliers_show', {slug: supplier.slug}) }}">{{ supplier.name }}</a></td>
                    <td>{{ supplier.address }}<br />
                        {{ supplier.zipcode }} {{ supplier.town }}</td>
                    <td>{{ phone_number_format(supplier.phone, 'NATIONAL') }}</td>
                    <td class="text-center">
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="{{ path('suppliers_show', {slug: supplier.slug}) }}">
                                <i class="fa fa-file-o"></i> {{ 'show'|trans({}, 'admin') }}
                            </a>
                            <a class="btn btn-default btn-sm" href="{{ path('suppliers_edit', {slug: supplier.slug}) }}">
                                <i class="fa fa-edit"></i> {{ 'edit'|trans({}, 'admin') }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    <div class="text-center">{{ knp_pagination_render(paginator) }}</div>
    
    <div class="btn-group">
        {% include 'homeButton.html.twig' %}
        <a class="btn btn-info" href="{{ path('suppliers_new') }}">
            <i class="fa fa-plus"></i> {{ 'Create a new entry'|trans({}, 'admin') }}
        </a>
    </div>
    
{% endblock %}
