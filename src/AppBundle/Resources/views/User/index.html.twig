{% extends "base.html.twig" %}

{% block title %}
    {{ '%entity% list'|trans({'%entity%': 'menu.users'|trans}, 'admin') }} - {{ parent() }}
{% endblock %}

{% macro thead(name, entity, field, label) %}
    {% spaceless %}
        {% set sort = app.session.get('sort.' ~ name) %}
        {% if sort and sort.entity == entity and sort.field == field %}
            {% if sort.type == 'DESC' %}
                <a href="{{ path('user_sort', {entity: entity, field: field, type: 'ASC'}) }}">{{ label }} <i class="fa fa-sort-down"></i></a>
            {% elseif sort.type == 'ASC' %}
                <a href="{{ path('user_sort', {entity: entity, field: field, type: 'DESC'}) }}">{{ label }} <i class="fa fa-sort-up"></i></a>
            {% endif %}
        {% else %}
            <a href="{{ path('user_sort', {entity: entity, field: field, type: 'ASC'}) }}">{{ label }} <i class="fa fa-sort"></i></a>
        {% endif %}
    {% endspaceless %}
{% endmacro %}

{% from _self import thead %}

{% block body_title %}
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
    {{ '%entity% list'|trans({'%entity%': 'menu.users'|trans}, 'admin') }}
{% endblock body_title %}


{% block glstock_body %}
    <table class="table table-striped table-hover table-bordered records_list">
        <thead>
            <tr>
                <th scope="col">{{ thead('user', 'user', 'id', 'gestock.id'|trans) }}</th>
                <th scope="col">{{ thead('user', 'user', 'username', "Nom d'utilisateur") }}</th>
                <th scope="col">{{ thead('user', 'user', 'email', 'E-mail') }}</th>
                <th scope="col">{{ thead('user', 'user', 'locked', 'Verrouill√©') }}</th>
                <th scope="col">{{ thead('user', 'groups', 'name', 'Group'|trans({}, 'admin')) }}</th>
                <th scope="col" class="col-md-2 text-center">{{ 'Actions'|trans({}, 'admin') }}</th>
             </tr>
        </thead>
        <tbody>
            {% for user in paginator %}
                {% set user_list %}
                    <tr>
                        <td class="text-right">{{ user.id }}</td>
                        <td><a href="{{ path('user_show', {id: user.id}) }}">{{ user.username }}</a></td>
                        <td>{{ user.email }}</td>
                        <td class="text-center">{% if user.locked %}<i class="fa fa-check-square-o"></i>{% else %}<i class="fa fa-square-o"></i>{% endif %}</td>
                        <td class="text-center">{{ user.groups|join(', ') }}</td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a class="btn btn-default btn-show btn-xs" href="{{ path('user_show', {id: user.id}) }}">
                                    {{ 'show'|trans({}, 'admin') }}
                                </a>
                                <a class="btn btn-info btn-edit btn-xs" href="{{ path('user_edit', {id: user.id}) }}">
                                    {{ 'edit'|trans({}, 'admin') }}
                                </a>
                            </div>
                        </td>
                    </tr>    
                {% endset %}
                {% if is_granted(user.roles[0]) %}
                    {{ user_list }}
                {% endif %}
            {% endfor %}
        </tbody>
    </table>
    
    {{ knp_pagination_render(paginator) }}
    
    <div class="btn-group">
        {% include 'homeButton.html.twig' %}
        <a class="btn btn-info btn-create" href="{{ path('user_new') }}">
            {{ 'Create a new entry'|trans({}, 'admin') }}
        </a>
    </div>
    
{% endblock glstock_body %}
