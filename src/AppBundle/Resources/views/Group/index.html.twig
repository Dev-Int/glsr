{% extends "base.html.twig" %}

{% block title %}
    {{ '%entity% list'|trans({'%entity%': 'menu.groups'|trans}, 'admin') }} - {{ parent() }}
{% endblock %}

{% block body_title %}
    <i class="fa fa-users"></i>
    {{ '%entity% list'|trans({'%entity%': 'menu.groups'|trans}, 'admin') }}
{% endblock body_title %}

{% block glstock_body %}
    <table class="table table-striped table-hover table-bordered records_list">
        <thead>
            <tr>
                <th scope="col">{{ 'form.group_name'|trans({}, 'FOSUserBundle') }}</th>
                <th scope="col" class="col-md-2 text-center">{{ 'Actions'|trans({}, 'admin') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for group in entities %}
                <tr>
                    <td><a href="{{ path('group_show', {id: group.id}) }}">{{ group.name }}</a></td>
                    <td class="text-center">
                        <div class="btn-group">
                            <a class="btn btn-default btn-show btn-sm" href="{{ path('group_show', {id: group.id}) }}">
                                {{ 'show'|trans({}, 'admin') }}
                            </a>
                            <a class="btn btn-info btn-edit btn-sm" href="{{ path('group_edit', {id: group.id}) }}">
                                {{ 'edit'|trans({}, 'admin') }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    <div class="btn-group">
        {% include 'homeButton.html.twig' %}
        <a class="btn btn-info btn-create" href="{{ path('group_new') }}">
            {{ 'Create a new entry'|trans({}, 'admin') }}
        </a>
    </div>
    
{% endblock glstock_body %}
