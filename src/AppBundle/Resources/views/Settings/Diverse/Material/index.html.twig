{% extends "base.html.twig" %}

{% block title %}
    {{ '%entity% list'|trans({'%entity%': 'menu.material'|trans({}, 'messages')}, 'admin') }} - {{ parent() }}
{% endblock %}

{% macro thead(name, entity, field, label) %}
    {% spaceless %}
        {% set sort = app.session.get('sort.' ~ name) %}
        {% if sort and sort.entity == entity and sort.field == field %}
            {% if sort.type == 'DESC' %}
                <a href="{{ path('material_sort', {entity: entity, field: field, type: 'ASC'}) }}">{{ label }} <i class="fa fa-sort-down"></i></a>
            {% elseif sort.type == 'ASC' %}
                <a href="{{ path('material_sort', {entity: entity, field: field, type: 'DESC'}) }}">{{ label }} <i class="fa fa-sort-up"></i></a>
            {% endif %}
        {% else %}
            <a href="{{ path('material_sort', {entity: entity, field: field, type: 'ASC'}) }}">{{ label }} <i class="fa fa-sort"></i></a>
        {% endif %}
    {% endspaceless %}
{% endmacro %}

{% from _self import thead %}

{% block body_title %}
    <i class="fa fa-pie-chart"></i>
    {{ '%entity% list'|trans({'%entity%': 'menu.material'|trans({}, 'messages')}, 'admin') }}
{% endblock %}

{% block glstock_body %}
    <table class="table table-striped table-hover table-bordered records_list">
        <thead>
            <tr>
                <th scope="col" class="col-md-1 text-center">{{ thead('material', 'material', 'id', 'gestock.id'|trans) }}</th>
                <th scope="col" class="col-md-2 text-center">{{ thead('material', 'material', 'name', 'gestock.name'|trans) }}</th>
                <th scope="col" class="col-md-1 text-center">{{ thead('material', 'material', 'active', 'gestock.actif'|trans) }}</th>
                <th scope="col" class="col-md-1 text-center">{{ thead('material', 'material', 'multiple', 'gestock.multiple'|trans) }}</th>
                <th scope="col" class="col-md-3 text-center">{{ thead('material', 'articles', 'name', 'title'|trans({}, 'gs_articles')) }}</th>
                <th scope="col" class="col-md-2 text-center">{{ 'Actions'|trans({}, 'admin') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for material in paginator %}
                <tr>
                    <td class="text-right">{{ "%06d"|format(material.id) }}</td>
                    <td><a href="{{ path('material_show', {slug: material.slug}) }}">{{ material.name }}</a></td>
                    <td class="text-center">{% if material.active %}<i class="fa fa-check-square-o"></i>{% else %}<i class="fa fa-square-o"></i>{% endif %}</td>
                    <td class="text-center">{% if material.multiple %}<i class="fa fa-check-square-o"></i>{% else %}<i class="fa fa-square-o"></i>{% endif %}</td>
                    <td>
                        {% for article in material.articles.values %}
                            {% if loop.last %}
                                <a href="{{ path('article_show', {slug: article.slug}) }}">{{ article.name }}</a>
                            {% else %}
                                <a href="{{ path('article_show', {slug: article.slug}) }}">{{ article.name }}</a> | 
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td class="text-center">
                        <div class="btn-group">
                            <a class="btn btn-default btn-xs btn-show" href="{{ path('material_show', {slug: material.slug}) }}">
                                {{ 'show'|trans({}, 'admin') }}
                            </a>
                            <a class="btn btn-info btn-xs btn-edit" href="{{ path('material_edit', {slug: material.slug}) }}">
                                {{ 'edit'|trans({}, 'admin') }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    {{ knp_pagination_render(paginator) }}
    
    <div class="btn-group record_actions">
        {% include 'homeButton.html.twig' %}
        <a class="btn btn-info btn-create" href="{{ path('material_new') }}">
            {{ 'Create a new entry'|trans({}, 'admin') }}
        </a>
    </div>
    
{% endblock %}
