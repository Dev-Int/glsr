{% extends "base.html.twig" %}

{% form_theme form 'AppBundle:Form:bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}
    {{ '%entity% creation'|trans({'%entity%': 'menu.groups'|trans}, 'admin') }} - {{ parent() }}
{% endblock %}

{% block body_title %}
    <i class="fa fa-users" aria-hidden="true"></i>
    {{ '%entity% creation'|trans({'%entity%': 'menu.groups'|trans}, 'admin') }}
{% endblock body_title %}

{% block glstock_body %}
    {{ form_start(form, {action: path('group_create')}) }}
        {{ form_widget(form) }}
        <p>
            <button class="btn btn-primary btn-create" type="submit">
                {{ 'Create'|trans({}, 'admin') }}
            </button>
        </p>
    {{ form_end(form) }}

    <div class="btn-group record_actions">
        {% include 'homeButton.html.twig' %}
        <a class="btn btn-info btn-list" href="{{ path('group') }}">
            {{ 'gestock.return_list'|trans }}
        </a>


    </div>
{% endblock glstock_body %}
