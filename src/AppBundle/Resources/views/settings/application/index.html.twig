{% extends "base.html.twig" %}

{% block title %}
    {{ '%entity% list'|trans({'%entity%': 'gestock.settings.settings.title'|trans}, 'admin') }} - {{ parent() }}
{% endblock %}

{% block body_title %}
    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> 
    {{ '%entity% list'|trans({'%entity%': 'gestock.settings.settings.title'|trans}, 'admin') }}
{% endblock %}

{% block glstock_body %}
    <table class="table table-striped table-hover table-bordered records_list">
        <thead>
            <tr>
                <th scope="col">{{ 'gestock.settings.settings.style_inventory'|trans }}</th>
                <th scope="col">{{ 'gestock.settings.settings.calculation'|trans }}</th>
                <th scope="col">{{ 'gestock.settings.settings.first_inventory.title'|trans }}</th>
                <th scope="col">{{ 'gestock.settings.settings.currency'|trans }}</th>
                <th scope="col">{{ 'Actions'|trans({}, 'admin') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for settings in entities %}
                <tr>
                    <td>{{ settings.inventoryStyle }}</td>
                    <td>{{ settings.calculation }}</td>
                    <td>{% if settings.firstInventory %}{{ settings.firstInventory|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ settings.currency }}</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="{{ path('settings_show', {id: settings.id}) }}">
                                <i class="fa fa-file-o"></i> {{ 'show'|trans({}, 'admin') }}
                            </a>
                            <a class="btn btn-info btn-edit btn-sm" href="{{ path('settings_edit', {id: settings.id}) }}">
                                {{ 'edit'|trans({}, 'admin') }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
        <div class="new_entry list-unstyled">
            {% include 'homeButton.html.twig' %}
        {% if ctEntity < 1 %}
            <a class="btn btn-info btn-create" href="{{ path('settings_new') }}">
                {{ 'Create a new entry'|trans({}, 'admin') }}
            </a>
        {% endif %}
        </div>
    
{% endblock %}
