{% extends "base.html.twig" %}

{% block title %}
    {{ 'gestock.settings.diverse.familylog'|trans }} - {{ parent() }}
{% endblock %}

{% block body_title %}
    <span class="glyphicon glyphicon-tag"></span>&nbsp;
    {{ 'gestock.settings.diverse.familylog'|trans }}
{% endblock %}

{% block glstock_body %}
    <table class="table table-hover table-bordered record_properties">
        <tbody>
            <tr>
                <th scope="row" class="col-md-4">{{ 'gestock.name'|trans }}</th>
                <td class="col-md-8">{{ familylog.name }}</td>
            </tr>
            {% if familylog.parent %}
            <tr>
                <th scope="row" class="col-md-4">{{ 'gestock.settings.diverse.parent_fam'|trans }}</th>
                <td class="col-md-8">{{ familylog.parent }}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    {{ form_start(delete_form) }}
        {{ form_widget(delete_form) }}

        <div class="btn-group record_actions">
            {% include 'homeButton.html.twig' %}
            <a class="btn btn-info" href="{{ path('familylog') }}">
                <i class="fa fa-list"></i> {{ 'gestock.return_list'|trans }}
            </a>

            <a class="btn btn-primary btn-edit" href="{{ path('familylog_edit', {slug: familylog.slug}) }}">
                {{ 'Edit'|trans({}, 'admin') }}
            </a>
            <button class="btn btn-danger" type="submit"><i class="fa fa-trash-o"></i> {{ 'Delete'|trans({}, 'admin') }}</button>

        </div>

        <input name="modal" type="hidden" value="0">
    {{ form_end(delete_form) }}

    {% include 'deleteForm.html.twig' %}
{% endblock %}
