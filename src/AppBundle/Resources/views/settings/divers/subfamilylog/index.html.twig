{% extends "base.html.twig" %}

{% block title %}
    {{ '%entity% list'|trans({'%entity%': 'SubFamilyLog'}, 'admin') }} - {{ parent() }}
{% endblock %}

{% macro thead(name, field, label) %}
    {% spaceless %}
        {% set sort = app.session.get('sort.' ~ name) %}
        {% if sort and sort.field == field %}
            {% if sort.type == 'DESC' %}
                <a href="{{ path('admin_subfamilylog_sort', {field: field, type: 'ASC'}) }}">{{ label }} <i class="fa fa-sort-down"></i></a>
            {% elseif sort.type == 'ASC' %}
                <a href="{{ path('admin_subfamilylog_sort', {field: field, type: 'DESC'}) }}">{{ label }} <i class="fa fa-sort-up"></i></a>
            {% endif %}
        {% else %}
            <a href="{{ path('admin_subfamilylog_sort', {field: field, type: 'ASC'}) }}">{{ label }} <i class="fa fa-sort"></i></a>
        {% endif %}
    {% endspaceless %}
{% endmacro %}

{% from _self import thead %}

{% block body_title %}
    <span class="glyphicon glyphicon-tags"></span>&nbsp;
    {{ '%entity% list'|trans({'%entity%': 'gestock.settings.diverse.subfamilylog'|trans}, 'admin') }}
{% endblock %}

{% block glstock_body %}
    <table class="table table-striped table-hover table-bordered records_list">
        <thead>
            <tr>
                <th scope="col" class="col-md-5">{{ thead('subfamilylog', 'name', 'gestock.name'|trans) }}</th>
                <th scope="col" class="col-md-5">{#{ thead('subfamilylog', 'familylogs', 'gestock.settings.diverse.familylog'|trans) }#}{{ 'gestock.settings.diverse.familylog'|trans }}</th>
                <th scope="col" class="col-md-2 text-center">{{ 'Actions'|trans({}, 'admin') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for subfamilylog in paginator %}
                <tr>
                    <td><a href="{{ path('admin_subfamilylog_show', {slug: subfamilylog.slug}) }}">{{ subfamilylog.name }}</a></td>
                    <td>{{ subfamilylog.familylogs }}</td>
                    <td class="text-center">
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="{{ path('admin_subfamilylog_show', {slug: subfamilylog.slug}) }}">
                                <i class="fa fa-file-o"></i> {{ 'show'|trans({}, 'admin') }}
                            </a>
                            <a class="btn btn-default btn-sm" href="{{ path('admin_subfamilylog_edit', {slug: subfamilylog.slug}) }}">
                                <i class="fa fa-edit"></i> {{ 'edit'|trans({}, 'admin') }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    {{ knp_pagination_render(paginator) }}
    
    <div class="btn-group">
        {% include 'homeButton.html.twig' %}
        <a class="btn btn-info" href="{{ path('admin_subfamilylog_new') }}">
            <i class="fa fa-plus"></i> {{ 'Create a new entry'|trans({}, 'admin') }}
        </a>
    </div>
    
{% endblock %}
