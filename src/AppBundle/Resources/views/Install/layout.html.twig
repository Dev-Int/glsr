                    </a>
                </li>
                <li>
                    <a href="{{ path('gs_install_st9') }}">
                        <span class="fa-stack fa-lg pull-left">
                            <span class="glyphicon glyphicon-tasks fa-stack-1x" aria-hidden="true"></span>
                        </span>
                        {{ 'title'|trans({}, 'gs_inventories') }}
                    </a>
                </li>
                
            </ul>
        </div>
    </section>
                    
    <section id="page-content-wrapper">
        <div class="panel panel-default xyz">
            <header class="panel-heading">
                {% block install_title %}{% endblock install_title %}
            </header>
            <section class="panel-body">
                {% block install_body %}{% endblock install_body %}
            </section>
            {% block install_footer %}{% endblock install_footer %}
        </div>
    </section>
{% endblock glstock_body %}
{% block javascripts %}
    {% javascripts 'bundles/app/js/sidebar_menu.js' filter='?yui_js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
