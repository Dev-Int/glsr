        <!-- Sidebar -->
        <div id="sidebar-wrapper" class="panel panel-default">
            <ul class="sidebar-nav nav-pills nav-stacked" id="menu">
                <li>
                    <a href="{{ path('gs_install_st1') }}">
                        <span class="fa-stack fa-lg pull-left">
                            <i class="fa fa-group fa-stack-1x" aria-hidden="true"></i>
                        </span>
                        {{ 'gestock.settings.group.title'|trans }}
                    </a>
                </li>
                <li>
                    <a href="{{ path('gs_install_st2') }}">
                        <span class="fa-stack fa-lg pull-left">
                            <i class="fa fa-user fa-stack-1x" aria-hidden="true"></i>
                        </span>
                        {{ 'gestock.settings.user.title'|trans }}
                    </a>
                </li>
                <li>
                    <a href="{{ path('gs_install_st3') }}">
                        <span class="fa-stack fa-lg pull-left">
                            <span class="glyphicon glyphicon-tower fa-stack-1x" aria-hidden="true"></span>
                        </span>
                        {{ 'gestock.settings.company.title'|trans }}
                    </a>
                </li>
                <li>
                    <a href="{{ path('gs_install_st4') }}">
                        <span class="fa-stack fa-lg pull-left">
                            <span class="glyphicon glyphicon-wrench fa-stack-1x" aria-hidden="true"></span>
                        </span>
                        {{ 'gestock.settings.settings.title'|trans }}
                    </a>
                </li>
                <li>
                    <a href="{{ path('gs_install_st5') }}">
