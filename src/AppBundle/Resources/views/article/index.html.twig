{% extends "base.html.twig" %}

{% block title %}
    {{ '%entity% list'|trans({'%entity%': 'title'|trans({}, 'gs_articles')}, 'admin') }} - {{ parent() }}
{% endblock %}

{% macro thead(name, entity, field, label) %}
    {% spaceless %}
        {% set sort = app.session.get('sort.' ~ name) %}
        {% if sort and sort.entity == entity and sort.field == field %}
            {% if sort.type == 'DESC' %}
                <a href="{{ path('article_sort', {entity: entity, field: field, type: 'ASC'}) }}">{{ label }} <i class="fa fa-sort-down"></i></a>
            {% elseif sort.type == 'ASC' %}
                <a href="{{ path('article_sort', {entity: entity, field: field, type: 'DESC'}) }}">{{ label }} <i class="fa fa-sort-up"></i></a>
            {% endif %}
        {% else %}
            <a href="{{ path('article_sort', {entity: entity, field: field, type: 'ASC'}) }}">{{ label }} <i class="fa fa-sort"></i></a>
        {% endif %}
    {% endspaceless %}
{% endmacro %}

{% from _self import thead %}

{% block body_title %}
    <i class="fa fa-shopping-basket" aria-hidden="true"></i>
    {{ '%entity% list'|trans({'%entity%': 'title'|trans({}, 'gs_articles')}, 'admin') }}
{% endblock %}

{% block glstock_body %}
    <table class="table table-striped table-hover table-bordered records_list">
        <thead>
            <tr>
                <th scope="col" class="col-md-1">{{ thead('article', 'article', 'id', 'gestock.id'|trans) }}</th>
                <th scope="col" class="col-md-2">{{ thead('article', 'article', 'name', 'gestock.name'|trans) }}</th>
                <th scope="col" class="col-md-2">
                    <i class="fa fa-barcode"></i> 
                    {{ thead('article', 'supplier', 'name', 'title'|trans({}, 'gs_suppliers')) }}
                </th>
                <th scope="col" class="col-md-1 text-center">
                    {{ thead('article', 'familyLog', 'name', 'gestock.settings.diverse.family'|trans) }}
                </th>
                <th scope="col" class="col-md-1 text-center">{{ 'settings.price'|trans({}, 'gs_articles') }}</th>
                <th scope="col" class="col-md-1 text-center">{{ 'settings.quantity'|trans({}, 'gs_articles') }}</th>
                <th scope="col" class="col-md-2 text-center">
                    <i class="fa fa-map-marker"></i>
                    {{ thead('article', 'zoneStorages', 'name', 'gestock.settings.diverse.zonestorage'|trans) }}
                </th>
                <th scope="col" class="col-md-2 text-center no-print">
                    <i class="fa fa-hourglass-o"></i> 
                    {{ 'Actions'|trans({}, 'admin') }}
                </th>
            </tr>
        </thead>
        <tbody>
            {% for article in paginator %}
                <tr>
                    <td>{{ "%06d"|format(article.id) }}</td>
                    <td><a href="{{ path('article_show', {slug: article.slug}) }}">{{ article.name }}</a></td>
                    <td><a href="{{ path('supplier_show', {slug: article.supplier.slug}) }}">{{ article.supplier.name }}</a></td>
                    <td>{{ article.familylog }}</td>
                    <td class="text-right">{{ article.price }}â‚¬</td>
                    <td class="text-right">{{ article.quantity }}</td>
                    <td>
                        {% set b = 0 %}
                        {% for zone in article.zonestorages %}
                            {% if b > 0 %}
                                , {{ zone.name }}
                            {% else %}
                                {{ zone.name }}
                            {% endif %}
                            {% set b = b + 1 %}
                        {% endfor %}
                    </td>
                    <td class="text-center no-print">
                        <div class="btn-group">
                            <a class="btn btn-default btn-xs btn-show" href="{{ path('article_show', {slug: article.slug}) }}">
                                {{ 'show'|trans({}, 'admin') }}
                            </a>
                            {% if is_granted('ROLE_ADMIN') %}
                            <a class="btn btn-info btn-edit btn-xs" href="{{ path('article_edit', {slug: article.slug}) }}">
                                {{ 'edit'|trans({}, 'admin') }}
                            </a>
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    <div class="text-center">{{ knp_pagination_render(paginator) }}</div>
    
    <div class="btn-group">
        {% include 'homeButton.html.twig' %}
        {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-info btn-create" href="{{ path('article_new') }}">
            {{ 'Create a new entry'|trans({}, 'admin') }}
        </a>
        {% endif %}
    </div>
{% endblock %}
